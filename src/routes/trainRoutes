const express = require("express");
const {createTrain, trainUpdate, trainDelete} = require('../controller/trainController');
const {validateInputCreate,validateInputUpdate} = require('../middleware/validation/trainValidation');
const {isAdmin} = require("../middleware/admin");

const router = express.Router();


router.post('/create', isAdmin, validateInputCreate, createTrain);
router.put('/update', isAdmin, validateInputUpdate, trainUpdate);
router.delete('/delete', isAdmin, trainDelete);


module.exports = router;